........ Code ..................

int main() {
    int n=5;
    for(int i=1; i<=n; i++){
        //Nuber
        for(int j=1; j<=i; j++){
            cout<<j;
        }
        //space
        for(int j=1; j<=2*n-2*i; j++){
            cout<<" ";
        }
        //Number
         for(int j=i; j>=1; j--){
            cout<<j;
        }
        cout<<endl;
        
    }
      return 0;
}
