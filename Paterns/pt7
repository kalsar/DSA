int main() {
    int m=5;
    int n=9;
    for(int i=0;  i<m; i++){
      for(int j=1; j<=m-i-1; j++){
          cout<<" ";
      }
      
       for(int k=1; k<=i*2+1; k++){
          cout<<"*";
      }
       for(int j=1; j<=m-i-1; j++){
          cout<<" ";
      }
      cout<<endl;
      
  }

    return 0;
}
