int main() {
    int m=5;
    int n=9;
    for(int i=0;  i<m; i++){
      for(int j=1; j<=i; j++){
          cout<<" ";
      }
      
       for(int k=1; k<=9-i*2; k++){
          cout<<"*";
      }
       for(int j=1; j<=i; j++){
          cout<<" ";
      }
      cout<<endl;
      
  }
    return 0;
}
